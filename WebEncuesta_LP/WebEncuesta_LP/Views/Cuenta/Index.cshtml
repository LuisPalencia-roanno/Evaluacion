@model WebEncuesta_LP.ViewModel.AdminViewModel
@{
    ViewBag.Title = "Index";
}

<style type="text/css">
    fieldset {
        font-family: sans-serif;
        border: 3px solid #1F497D;
        background: #ddd;
        border-radius: 5px;
        padding: 15px;
        margin-top: 100px;
        margin-left: 250px;
        margin-right: 250px;
    }

    fieldset legend {
        background: #1F497D;
        color: #fff;
        padding: 5px 10px 10px 20px;
        font-size: 15px;
          border-radius: 5px;
          box-shadow : 0 0 0 5px #ddd;
          margin-left: 1px;
          margin-right: 10px;
    }
     
</style>

<section style="margin:10px;">
    <fieldset style="min-height:100px;">
        <legend>
            <b>Login de Empleado</b>
        </legend>
        @using (Html.BeginForm(actionName: "Index", controllerName: "Cuenta", method: FormMethod.Post))

        {
            <div class="container">
                @Html.ValidationSummary(excludePropertyErrors: true,message: null, htmlAttributes: new {@class = "text-danger"})
                <div class="form-group">

                    @Html.LabelFor(expression: model => model.NombreUsuario);
                    @Html.TextBoxFor(expression: model => model.NombreUsuario, htmlAttributes: new { @class = "form-control" , autocomplete="off"})
                    @Html.ValidationMessageFor(expression: model => model.NombreUsuario, validationMessage : null, htmlAttributes: new {@class = "text-danger"})

                </div>
                <div class="form-group">

                    @Html.LabelFor(expression: model => model.Contrasena)
                    @Html.TextBoxFor(expression: model => model.Contrasena, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(expression: model => model.Contrasena, validationMessage: null, htmlAttributes: new {@class = "text-danger"})

                </div>

                <input type="submit" value="Login" name="Login" class="btn btn-primary" />

            </div>
        }

    </fieldset>

</section>

